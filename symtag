# details.

shopt -s expand_aliases
alias fail='{ echo $LINENO; exit 1; }'

SYMTAGRC=~/.symtagrc
ARGUMENTS='--norc --noprofile'
COMMANDS=''

TARGETS=()
TAGS=()
while test $# -gt 0; do
  case $1 in
    -f|--file)
      FILES+=($2)
      shift
      ;;
    -t|--tag)
      TAGS+=($2)
      shift
      ;;
    -c|--config|--rc)
      SYMTAGRC=$2
      shift
      ;;
    -*)
      exit 1
      ;;
    *)
      ARGUMENTS="${ARGUMENTS} -c '${*}'"
      while shift; do true; done
      ;;
  esac
  shift
done

SYMTAGDIR=~/.symtag

test -f $SYMTAGRC && . $SYMTAGRC

mkdir -p $SYMTAGDIR/{tags,names,files}  || fail



cd $SYMTAGDIR                           || fail


